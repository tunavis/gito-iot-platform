# Production Environment Configuration
# Copy to .env.production and fill in real values

# App
APP_ENV=production
DEBUG=false

# Database (use managed PostgreSQL in production)
DATABASE_URL=postgresql+asyncpg://gito_user:CHANGE_ME@prod-db-host:5432/gito_iot_prod

# JWT
JWT_SECRET_KEY=CHANGE_ME_STRONG_SECRET_64_CHARS_MINIMUM
JWT_EXPIRATION_HOURS=24

# MQTT
MQTT_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Redis (use managed Redis in production)
REDIS_URL=redis://prod-redis-host:6379/0

# CORS (production domain)
CORS_ORIGINS=["https://app.yourdomain.com"]

# Logging
LOG_LEVEL=INFO

# Email/SMTP
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=CHANGE_ME
SMTP_FROM_EMAIL=noreply@yourdomain.com
