# ============================================================================
# GITO IOT PLATFORM - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains secrets
# ============================================================================

# Database
DB_PASSWORD=your-secure-db-password-here
DATABASE_URL=postgresql://gito:your-secure-db-password-here@postgres:5432/gito

# Redis / KeyDB
REDIS_URL=redis://keydb:6379/0

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars-xxxxxxxxxxxxxxxxxxxxxxx
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# MQTT / Mosquitto
MQTT_BROKER_HOST=mosquitto
MQTT_BROKER_PORT=1883
MQTT_USERNAME=admin
MQTT_PASSWORD=your-mqtt-admin-password

# FastAPI Backend
FASTAPI_URL=http://api:8000
ENVIRONMENT=development
LOG_LEVEL=INFO

# Next.js Frontend
NEXT_PUBLIC_API_URL=/api
NODE_ENV=development

# ChirpStack (Phase 3)
CHIRPSTACK_API_URL=http://chirpstack:8090
CHIRPSTACK_TENANT_ID=your-chirpstack-tenant-uuid
CHIRPSTACK_API_KEY=your-chirpstack-api-key

# Email (Phase 2)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=no-reply@gito-iot.com

# Observability (Phase 4)
PROMETHEUS_ENABLED=false
GRAFANA_URL=http://grafana:3000
LOKI_URL=http://loki:3100
